{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 디버거: 현재 파일",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}", // 작업 디렉터리를 프로젝트 루트로 설정
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }  
    ]
}